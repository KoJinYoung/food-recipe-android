<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_relativelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity">

    <com.MakSSe.foodRecipe.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_sl"
        android:background="@android:color/darker_gray"
        sl:scale_base_width="400"
        sl:scale_base_height="600"
        >

        <TextView
            android:id="@+id/sl_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:text="@string/hello_world"
            android:textColor="@android:color/white"
            sl:scale_left="20"
            sl:scale_top="0"
            sl:scale_height="1"
            sl:scale_width="100"
            sl:scale_textsize="20"
            sl:textview_wrapcontent_direction="bottom"
            sl:textview_wrapcontent_resizesurrounded="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            sl:scale_left="200"
            sl:scale_top="30"
            sl:scale_width="100"
            sl:scale_height="100" />
    </com.MakSSe.foodRecipe.ScalableLayout>
</RelativeLayout>
